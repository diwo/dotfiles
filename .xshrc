[[ -s "$HOME/.profile" ]] && source "$HOME/.profile"

# Disable flow control (C-s / C-q)
stty -ixon

# Aliases
alias ls='ls --color=auto'
alias ll='ls -la'
alias dirs='dirs -v'
alias grep='grep --color=auto'
alias n='notify'
alias fn='fg; notify'
alias dockercompose=docker-compose
alias dcompose=docker-compose
alias fig=docker-compose
alias tree='tree --dirsfirst'
alias trim_grep_path="sed 's/^.\+\/\([a-zA-Z.]\+\)\([\:\-]\)/\1\2/'"
alias grepjx='grep -r --include=\*.{java,xml} --exclude-dir=target'

# Custom functions
notify() {
  local ret=$?

  local id="Command"
  if [ $# -ne 0 ]; then
    id="$@"
  fi

  local msg="$id success!"
  if [ $ret -ne 0 ]; then
    msg="$id FAILED!"
  fi

  terminal-notifier -message "$msg"
}

highlight() {
  sed 's/\r//' | grep --color=always -iE "$1|$"
}

highlight_line() {
  highlight ".*$1.*"
}

